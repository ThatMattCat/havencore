AGENT_NAME="Selene"

WEATHER_API_KEY=""         # From weatherapi.com
HF_HUB_TOKEN=""            # Huggingface Token
DEV_CUSTOM_API_KEY="1234"  # Must be set to something
DEBUG_LOGGING=0            # 0 = off, 1 = on
HOST_IP_ADDRESS="10.0.0.1" # The IP of the host running the docker containers

LOKI_URL='http://localhost:3100/loki/api/v1/push'

CURRENT_LOCATION="Citytonville, OH, USA"
CURRENT_TIMEZONE="America/Chicago"
CURRENT_ZIPCODE="00000"
HAOS_URL="https://localhost:8123/api" # Your  Assistant URL
HAOS_TOKEN="" #Long-lived Home Assistant Token

WOLFRAM_ALPHA_API_KEY=""
BRAVE_SEARCH_API_KEY=""

SRC_LAN="en"
SOURCE_IP="10.0.0.100" # edge device IP address, TODO: remove this and ensure IP passed by edge devices
TTS_LANGUAGE="a" # Kokoro TTS AI Model language option
TTS_VOICE="af_heart"

TTS_DEVICE="cuda:0" # GPU index to use for text-to-speech model
STT_DEVICE="0" # GPU index to use for speech-to-text model

HUGGING_FACE_HUB_TOKEN=${HF_HUB_TOKEN} # Different tools use different names, c'est la vie

# ============= PostgreSQL Configuration =============
POSTGRES_DB=havencore
POSTGRES_USER=havencore
POSTGRES_PASSWORD=havencore_password

# ============= MCP Configuration =============
# Enable MCP and the general tools server
MCP_ENABLED=true
MCP_PREFER_OVER_LEGACY="true"

# Alternative: Run the MCP server directly (if not using Docker)
MCP_SERVERS='[{
  "name": "general_tools",
  "command": "/usr/bin/python",
  "args": ["./utils/mcp_server.py"],
  "enabled": true
},
{
  "name": "mcp_server_fetch",
  "command": "/usr/bin/python",
  "args": ["-m", "mcp_server_fetch"],
  "enabled": true
},
{
  "name": "homeassistant",
  "command": "/usr/bin/python",
  "args": ["./utils/homeassistant/mcp_server.py"],
  "enabled": true
}]' 

